{
  "name": "itv-slides-formatter",
  "version": "2.0.0",
  "description": "Google Apps Script tool for automated Google Slides formatting. Deploy via itv-appscript CLI.",
  "scripts": {
    "auth": "itv-appscript auth",
    "auth:manual": "itv-appscript auth --manual",
    "clean": "rm -f token.json",
    "security:check": "./scripts/security-check.sh",
    "security:setup": "./scripts/setup-security.sh",
    "security:scan": "npm run security:check",
    "precommit": "npm run security:check"
  },
  "keywords": [
    "google-apps-script",
    "google-slides",
    "automation",
    "formatting"
  ],
